<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="progressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="demo_layout">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/layout_border</item>
        <item name="android:layout_width">100.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="demo_btn">
        <item name="android:layout_width">150.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2.0dip</item>
    </style>
    <style name="flow_test_pay_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="flow_test_pay_border_layout">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/layout_border</item>
        <item name="android:padding">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2.0dip</item>
    </style>
    <style name="flow_test_pay_textview">
        <item name="android:layout_width">100.0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="flow_test_pay_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
